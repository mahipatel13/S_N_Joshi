[Unit]
Description=S N Joshi Flask App (Gunicorn)
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/hs/backend
EnvironmentFile=/var/www/hs/backend/.env
ExecStart=/var/www/hs/backend/.venv/bin/gunicorn main:app --bind 127.0.0.1:8080 --workers 2 --timeout 120
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
